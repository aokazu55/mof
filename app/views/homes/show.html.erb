<p id="notice"><%= notice %></p>

<h1>閲覧</h1>
<p>
  <strong>物件名:</strong>
  <%= @home.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @home.rent %>円
</p>

<p>
  <strong>住所:</strong>
  <%= @home.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @home.year %>円
</p>

<p>
  <strong>備考:</strong>
  <%= @home.remarks %>
</p>

<p>--------------------------------------- </p>

<% n = 0 %>
  <% @home.stations.each do |station|%>
      <% if station.line.blank? && station.station.blank? && station.minute.blank? %>
        <p>最寄り駅の情報はありません！</p>
      <% else %>
      <h3>最寄り駅<%= n += 1 %></h3>
        <tr>
          <td>路線名:<%= station.line %></td>
          <td>駅名：<%= station.station %></td>
          <td>徒歩分数：<%= station.minute %>分</td>
        </tr>
      <% end %>
  <% end %>

<%= link_to '編集', edit_home_path %> |
<%= link_to '戻る', homes_path %>
