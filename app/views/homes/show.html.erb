<p id="notice"><%= notice %></p>

<h1>物件編集</h1>
<p>
  <strong>物件名:</strong>
  <%= @home.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @home.rent %>円
</p>

<p>
  <strong>住所:</strong>
  <%= @home.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @home.year %>円
</p>

<p>
  <strong>備考:</strong>
  <%= @home.remarks %>
</p>

<span>---------------------------------------------------------------</span>

<% n=0 %>
<% @home.stations.each do |station| %>
  <h3><%= "最寄り駅#{n +=1}" %> </h3>
  <p>
    <strong>路線名:</strong>
    <%= station.line %>
  </p>

  <p>
    <strong>駅:</strong>
    <%= station.station %>
  </p>

  <p>
    <strong>徒歩分数:</strong>
    <%= station.minute %>
  </p>
<% end %>


<%= link_to '編集する', edit_home_path(@home) %> |
<%= link_to '戻る', homes_path %>
